{% extends 'base.html.twig' %}

{% block title %}Type d'actvité{% endblock %}

{% block body %}
    <h1>Activité</h1>

    <div class="container">
        <div class="row">
            {% for activity in category.activities %}
                <div class="col-sm-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ activity.title }}</h5>
                            <a href="{{ path('activity_show', {'id': activity.id}) }}" class="btn btn-primary">Button</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('category_index') }}">Retour vers Catégories</a>

{% endblock %}