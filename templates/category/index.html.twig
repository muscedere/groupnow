{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category</h1>

    <div class="container">
            <div class="row">
                    {% for category in categories %}
                    <div class="col-sm-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ category.title }}</h5>
                                <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-primary">Button</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
        

{% endblock %}
